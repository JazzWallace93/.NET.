@model IEnumerable<MusicLibrary.Models.Song>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@if (ViewBag.Name == null)
{
    Context.Response.Redirect("/Songs/Login");
}
else if (ViewBag.Name == "admin")
{
    Context.Response.Redirect("/Songs/Login");
}

<h1>Home</h1>

<hr/>
<h1 class="usern">Welcome @ViewBag.Name, this is my playlist!</h1>

<br /><br />


<form asp-controller="Songs" asp-action="List">
    <p>
        Genre: <input type="text" name="sString" class="tb"> 
        <input type="submit" value="Filter" class="filterButton" />
    </p>
</form>

<table class="table">
    <thead class="thead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="tbody">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>



