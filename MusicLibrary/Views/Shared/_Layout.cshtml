
<!DocType html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/bootstrap.css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        body {
            background-image: url('../dj.jpg');
            height: 1000px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            color:white;
            background-color:lightgray;
        }

        #container {
            margin: 50px;
            width: auto;
        }

        #h1 {
            margin-top: 30px;
            font-family: Luminari, fantasy;
            font-size: 100px;
            color:white;
            text-align:center;           
        }
        .box {
            background-color: grey;
            width: 700px;
            opacity: 0.8;
            text-align:center;
            padding-top:20px;
        }

        table {
            border: double;
            padding: 4px;
            background-color:lightgray;
            color:black;
        }

        h2 {
            float: left;
        }

        .logout {
            float: right;
        }

        .thead {
            background-color: gray;
            color:black;
        }

        .tbody {
            background-color: white;
            color:black;
        }

        #logoutB {
            float: right;
            margin-right: 10px;
            margin-top: 10px;
        }

        .logButton {
            font-size: 1.5rem;
            display: block;
            background-color: #009ac9;
            border: 1px solid transparent;
            color: #ffffff;
            -webkit-border-radius: 3px;
            border-radius: 3px;
            -webkit-transition: all 0.3s ease-in-out;
            -moz-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }

            .logButton:hover {
                background-color: #ffffff;
                color: #009ac9;
                border-color: #009ac9;
            }

        .tb {
            border: 2px solid #456879;
            border-radius: 10px;
            height: 28px;
            width: 230px;
            background-color: floralwhite;
            color:black
        }

        .cr {
            float: right;
        }

        .filterButton {
            font-size: 1.0rem;
            background-color: #009ac9;
            border: 1px solid transparent;
            color: #ffffff;
        }

            .filterButton:hover {
                background-color: #ffffff;
                color: #009ac9;
                border-color: #009ac9;
            }

        .row1{
            border: double;
            padding: 4px;
            max-width: 500px;
            margin: auto;
            background-color:white;
            color:black;
        }

        .col1{
            padding: 4px;
        }

        .dl{
            color:black;
        }

    </style>
</head>

<body>

        @if (ViewBag.Name != null)
        {
            <form method="post" asp-controller="Songs" asp-action="Logout">
                <input type="submit" value="Logout" class="logButton" id="logoutB" />
            </form>
        }
        else { }

        <div class="box">
            <h1 id="h1">Jazz's Music Library</h1>
        </div>

        <div id="container">
            @RenderBody()
        </div>

</body>
</html>